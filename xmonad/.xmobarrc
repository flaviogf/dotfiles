Config { overrideRedirect = False
       , font = "xft:iosevka-9"
       , bgColor = "#5f5f5f"
       , fgColor = "#f8f8f2"
       , position = TopW L 100
       , commands = [ Run Cpu
                      [
                        "-L", "3"
                      , "-H", "50"
                      , "--high", "red"
                      , "--normal", "green"
                      ] 10
                    , Run Memory
                      [
                        "--template", "Mem: <usedratio>%"
                      ] 10
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "}{ %cpu% | %memory% "
       }
