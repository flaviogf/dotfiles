Config { font = "xft:Fira Code Nerd Font:regular:pixelsize=11,xft:Font Awesome 6 Free Solid:pixelsize=12"
       , bgColor = "#282c34"
       , fgColor = "#ff6c6b"
       , position = TopSize L 100 24
       , commands = [ Run Cpu ["-t", "\xf2db cpu: (<total>%)", "-H", "50", "--high", "red"] 20
                    , Run Memory ["-t", "\xf233 mem: <usedratio>%"] 20
                    , Run Date "\xf133 %m/%d/%y %H:%M" "date" 50
                    , Run UnsafeStdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%UnsafeStdinReader% }{ %cpu% | %memory% | %date% "
       }
